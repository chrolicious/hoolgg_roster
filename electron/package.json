{
  "name": "hoolgg-roster",
  "version": "0.1.22",
  "description": "WoW Character Tracker for Midnight Expansion",
  "main": "main.js",
  "author": "Hool.gg",
  "license": "MIT",
  "homepage": "https://github.com/chrolicious/hoolgg_roster",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrolicious/hoolgg_roster.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --disable-gpu",
    "prebuild": "node scripts/copy-resources.js",
    "build": "electron-builder build --win --publish never",
    "build:publish": "electron-builder build --win --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "build": {
    "appId": "com.hoolgg.roster",
    "productName": "Hool.gg Roster",
    "copyright": "Copyright Â© 2026 Hool.gg",
    "icon": "assets/icon.ico",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Hool.gg",
      "icon": "assets/icon.ico",
      "artifactName": "Hool.gg-Roster-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hool.gg Roster"
    },
    "files": [
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "app-resources",
        "to": "app"
      },
      {
        "from": "python-embedded",
        "to": "python",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "chrolicious",
      "repo": "hoolgg_roster",
      "releaseType": "release"
    }
  }
}
